{% extends 'subsiteslayout.html.twig' %}
{% block title %}{{ document.getTitle() }}{% endblock %}
{% block description %}{{ document.getDescription() }}{% endblock %}
{% block body %}


    <div class="container" style="margin-top:100px">
        <section id="breadcrumb-header">
            <div class="col-12 text-center">
                <h1>{{ "Fragen & Antworten"|trans }}</h1>
            </div>
        </section>
        <div id="accordion">
    {% for faq in faqs %}
        <div class="card">
            <div class="card-header" id="{{ faq.id }}">
                <h5 class="mb-0">
                    <button class="btn btn-link" data-toggle="collapse" data-target="#{{ loop.index }}" aria-expanded="true" aria-controls="{{ loop.index }}">
                        {{ faq.questions|raw }}
                    </button>
                </h5>
            </div>

            <div id="{{ loop.index }}" class="collapse hide" aria-labelledby="{{ faq.id }}" data-parent="#accordion">
                <div class="card-body">
                    {{ faq.answers|raw }}
                </div>
            </div>
        </div>
    {% endfor %}
    </div>
    </div>

    <section id="email" class="top-margin">
        <form method="post" action="{{ path('faq_saveFaq') }}">
            <div class="container">
                <div class="row justify-content-center justify-content-md-between">
                    <div class="col-12">
                        <p class="font-center">{{ pimcore_input('meinung') }}</p>
                        <div class="form-group col-6 offset-3">
                            <label for="exampleFormControlTextarea1"></label>
                            <textarea class="form-control" name="feedback" id="exampleFormControlTextarea1" rows="3"></textarea>
                        </div>
                    </div>
                    {#<div class="col-12">#}
                        {#<p class="font-center">{{ pimcore_input('fragen') }}</p>#}
                        {#<div class="form-group col-6 offset-3">#}
                            {#<label for="exampleFormControlTextarea1"></label>#}
                            {#<textarea class="form-control" name="question" id="exampleFormControlTextarea1" rows="3"></textarea>#}
                        {#</div>#}
                    {#</div>#}
                    <div class="col-6 position-center">
                        <div class="input-group input-group-lg">
                            <input type="text" class="form-control" placeholder="Gib hier Deine E-Mail Adresse ein" aria-label="Recipient's username" aria-describedby="basic-addon2" name="sendEmail">
                            <div class="input-group-append">
                                <button class="btn btn-primary-blue" type="submit" >{{ "Senden"|trans }}</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </section>


{% endblock %}