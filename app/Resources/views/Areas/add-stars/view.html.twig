            "@type" : "Organization",
            "name" : "pick out sports",
            "logo" : {
                "@type": "ImageObject",
                "url" : "https://www.pickoutsports.de/img/homeLogo.png"
            }
        },
        "aggregateRating" : {
            "@type" : "AggregateRating",
